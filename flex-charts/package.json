{
  "name": "flex-charts",
  "version": "0.1.0",
  "description": "A flexible chart library for React applications",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "rimraf dist && tsc -p tsconfig.lib.json && node build.js",
    "build:playground": "vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:render": "playwright test",
    "test:render:ui": "playwright test --ui",
    "test:render:debug": "playwright test --debug",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@playwright/test": "^1.52.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "esbuild": "^0.25.4",
    "esbuild-plugin-css-modules": "^0.3.0",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "jsdom": "^26.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rimraf": "^6.0.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vitest": "^3.1.4"
  },
  "keywords": [
    "react",
    "charts",
    "data-visualization",
    "typescript"
  ],
  "author": "FlexCharts Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/terotests/FlexCharts.git"
  },
  "bugs": {
    "url": "https://github.com/terotests/FlexCharts/issues"
  },
  "homepage": "https://github.com/terotests/FlexCharts#readme",
  "publishConfig": {
    "access": "public"
  }
}
